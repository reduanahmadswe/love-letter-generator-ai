# ===================================
# Valentine Messages Demo Environment Variables
# ===================================
# Copy this file to .env.local and fill in your actual values
# Never commit your actual .env.local file to version control

# ===================================
# Required API Keys
# ===================================

# Google Gemini AI API Key (Required)
# Get your API key from: https://makersuite.google.com/app/apikey
# This is used for generating AI-powered Valentine messages
VITE_GEMINI_API_KEY=AIzaSyCkmOST-FlxeNfmzdZb2EBnqZ6un0YeBsE

# ===================================
# Optional Configuration
# ===================================

# Vercel Analytics (Optional)
# Used for tracking page views and user interactions
# Get from: https://vercel.com/analytics
VITE_VERCEL_ANALYTICS_ID=your_vercel_analytics_id_here

# ===================================
# Development Configuration
# ===================================

# Development Mode (Optional)
# Set to 'development' for local development, 'production' for deployment
NODE_ENV=development

# API Base URL (Optional)
# Only needed if you're using a custom API endpoint
VITE_API_BASE_URL=https://your-custom-api-url.com

# ===================================
# Feature Flags (Optional)
# ===================================

# Enable/disable specific features during development
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_AI_FEATURES=true

# ===================================
# Localization (Optional)
# ===================================

# Default language for the application
VITE_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
VITE_SUPPORTED_LANGUAGES=en,es,fr,it,ja,ko,yo,bn

# ===================================
# Performance & Caching (Optional)
# ===================================

# Cache duration for AI responses (in milliseconds)
VITE_CACHE_DURATION=300000

# Maximum message length for AI generation
VITE_MAX_MESSAGE_LENGTH=250

# ===================================
# Security (Optional)
# ===================================

# Rate limiting (requests per minute)
VITE_RATE_LIMIT=10

# Maximum name length
VITE_MAX_NAME_LENGTH=50

# ===================================
# Deployment Configuration
# ===================================

# Base URL for deployment (leave empty for root)
VITE_BASE_URL=

# Public URL for social sharing
VITE_PUBLIC_URL=https://your-valentine-app.vercel.app

# ===================================
# Instructions
# ===================================
# 1. Copy this file to .env.local
# 2. Replace the placeholder values with your actual API keys
# 3. The VITE_GEMINI_API_KEY is required for the app to work
# 4. All other variables are optional but can enhance functionality
# 5. Never commit your .env.local file to version control
